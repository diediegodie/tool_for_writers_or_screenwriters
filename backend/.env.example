# Environment Configuration for Writer Tool
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/writer_tool_dev
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/writer_tool_test
DATABASE_URL=postgresql://postgres:password@localhost:5432/writer_tool_prod

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Autosave Configuration
AUTOSAVE_INTERVAL_SECONDS=30
AUTOSAVE_MAX_VERSIONS=50

# Application Configuration
PORT=5000
DEBUG=True
